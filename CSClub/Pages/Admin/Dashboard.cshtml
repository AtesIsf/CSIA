@page
@model CSClub.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="text-center" style="margin-bottom: 50px">CS Club Members</h1>

<div class="text-center" style="margin-top: 20px">
    <table class="table">
        <thead>
            <tr>
                <td>Name</td>
                <td>Grade</td>
                <td>Meetings Attended</td>
                <td>Is Co-President</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model.Members)
            {
                <tr>
                    <td>@m.Name</td>
                    <td>@m.Grade</td>
                    <td>
                        @m.MeetingsAttended
                        <!--Input-->
                        <form method="get" asp-page="/Admin/CRUD/ModifyMeetingsAttended">
                            <input type="hidden" name="id" value="@m.Id" />
                            <button type="submit" name="inc" value="true" class="sort-link-button">+</button>
                            <button type="submit" name="dec" value="true" class="sort-link-button">-</button>
                        </form>
                    </td>
                    <td>@m.IsCoPresident</td>
                    <td>
                        <!--Input-->
                        <form method="get" asp-page="/Admin/CRUD/DeleteMember">
                            <input type="hidden" name="id" value="@m.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <!--Input-->
        <form method="get" asp-page="/Admin/CRUD/AddMember">
            <label for="name">Name</label>
            <input type="text" name="param1" />

            <br />

            <label for="grade">Grade</label>
            <input type="text" name="param2" />

            <br />

            <button type="submit" class="btn btn-secondary btn-sm" style="margin-top: 5px">Add</button>
        </form>
    </div>
</div>